# Praval Unified Storage Demo Environment Configuration
# Copy this file to .env and configure your settings

# Required: OpenAI API Key for LLM-powered agents
OPENAI_API_KEY=your_openai_key_here

# Optional: Alternative LLM providers  
# ANTHROPIC_API_KEY=your_anthropic_key_here
# COHERE_API_KEY=your_cohere_key_here

# PostgreSQL Configuration (auto-configured in Docker)
POSTGRES_HOST=postgres
POSTGRES_PORT=5432
POSTGRES_DB=praval
POSTGRES_USER=praval
POSTGRES_PASSWORD=praval_secure_password
POSTGRES_POOL_MIN_SIZE=5
POSTGRES_POOL_MAX_SIZE=20

# Redis Configuration (auto-configured in Docker)
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_DB=0
REDIS_POOL_MAX_SIZE=10

# MinIO S3 Configuration (auto-configured in Docker)
AWS_ACCESS_KEY_ID=minioadmin
AWS_SECRET_ACCESS_KEY=minioadmin
S3_ENDPOINT_URL=http://minio:9000
S3_BUCKET_NAME=praval-demo-bucket
S3_REGION=us-east-1

# Qdrant Vector Database Configuration (auto-configured in Docker)
QDRANT_URL=http://qdrant:6333
QDRANT_COLLECTION_NAME=praval_storage
QDRANT_VECTOR_SIZE=1536

# FileSystem Configuration
FILESYSTEM_BASE_PATH=/app/storage

# Logging Configuration
PRAVAL_LOG_LEVEL=INFO
STORAGE_LOG_OPERATIONS=true

# Demo Configuration  
DEMO_CUSTOMER_COUNT=5
DEMO_GENERATE_REPORTS=true
DEMO_RUN_ANALYTICS=true