# Praval Memory Agents Demo Environment Configuration
# Copy this file to .env and configure your settings

# Required: OpenAI API Key for LLM-powered agents
OPENAI_API_KEY=your_openai_key_here

# Optional: Alternative LLM providers
# ANTHROPIC_API_KEY=your_anthropic_key_here
# COHERE_API_KEY=your_cohere_key_here

# Qdrant Vector Database Configuration (auto-configured in Docker)
QDRANT_URL=http://qdrant:6333
QDRANT_COLLECTION_NAME=praval_memories

# Memory System Configuration
SHORT_TERM_MAX_ENTRIES=1000
SHORT_TERM_RETENTION_HOURS=24
LONG_TERM_MAX_RESULTS=50

# Logging Configuration
PRAVAL_LOG_LEVEL=INFO

# Demo Configuration
DEMO_DURATION_MINUTES=10
MEMORY_ANALYSIS_ENABLED=true